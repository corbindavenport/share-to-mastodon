{
	"manifest_version": 2,
	"name": "Share to Mastodon",
	"version": "1.0",
	"author": "Corbin Davenport",
	"homepage_url": "https://github.com/corbindavenport/share-to-mastodon",
	"description": "Share links to Mastodon in one click!",
	"options_ui": {
		"page": "settings.html",
		"open_in_tab": false
	},
	"browser_action": {
		"default_icon": {
			"16": "img/icon_x16.png",
			"32": "img/icon_x32.png",
			"48": "img/icon_x48.png"
		},
		"default_title": "Share this page to Mastodon"
	},
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+Y"
			},
			"description": "Share current page on Mastodon"
		}
	},
	"permissions": [
		"contextMenus",
		"storage",
		"notifications",
		"activeTab"
	],
	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	"icons": {
		"16": "img/icon_x16.png",
		"48": "img/icon_x48.png",
		"128": "img/icon_x128.png",
		"512": "img/icon_x512.png"
	}
}